{
  "compilerOptions": {
    "rootDir": "ts",
    "outDir": "build",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "declaration": true
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}
