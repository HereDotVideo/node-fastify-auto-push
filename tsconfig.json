{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "ts",
    "outDir": "build",
    "module": "CommonJS",
    "target": "ES2021",
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}
